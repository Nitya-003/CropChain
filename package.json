{
  "name": "cropchain-smart-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for CropChain blockchain crop tracking system",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "build": "node node_modules/vite/bin/vite.js build",
    "preview": "node node_modules/vite/bin/vite.js preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:trace": "hardhat test --trace",
    "test:unit": "jest",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "setup:ai": "node scripts/setup-ai-chatbot.js",
    "security:slither": "slither contracts/CropChain.sol",
    "security:mythril": "myth analyze contracts/CropChain.sol --solv 0.8.19"
  },
  "keywords": [
    "blockchain",
    "smart-contracts",
    "solidity",
    "hardhat",
    "supply-chain",
    "agriculture"
  ],
  "author": "CropChain Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "cypress": "^13.6.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "hardhat": "^2.22.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/react-router-dom": "^5.3.3",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.0",
    "framer-motion": "^11.0.0",
    "i18next": "^23.10.0",
    "i18next-browser-languagedetector": "^7.2.0",
    "idb": "^8.0.0",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.0",
    "react-router-dom": "^6.22.0"
  }
}
