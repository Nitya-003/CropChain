# CropChain Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED VARIABLES =====
NODE_ENV=development

# ===== SERVER CONFIGURATION =====
PORT=3001

# ===== SECURITY CONFIGURATION =====
# Rate Limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000          # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100          # General rate limit
AUTH_RATE_LIMIT_MAX=5                # Auth endpoint limit  
BATCH_RATE_LIMIT_MAX=20              # Batch endpoint limit

# CORS Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760               # 10MB in bytes (default)

# ===== BLOCKCHAIN CONFIGURATION =====
# At least one provider URL is recommended
INFURA_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ALCHEMY_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
PRIVATE_KEY=0x1234567890123456789012345678901234567890123456789012345678901234

# ===== DATABASE CONFIGURATION =====
# Optional - if not set, uses in-memory storage
MONGODB_URI=mongodb://localhost:27017/cropchain
MONGODB_TEST_URI=mongodb://localhost:27017/cropchain_test

# ===== AUTHENTICATION CONFIGURATION =====
# Optional - for future authentication features
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# ===== OPTIONAL CONFIGURATIONS =====
# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook Configuration (for integrations)
WEBHOOK_URL=https://your-webhook-url.com/notify

# Additional Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_minimum_32_characters_long

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/cropchain.log
UPLOAD_DIR=uploads